<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/mugs"
        android:id="@+id/past_orders_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Print White Mug with fine"
        android:layout_toRightOf="@+id/past_orders_item_image"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:id="@+id/line_one"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ceramic Build Quality"
        android:layout_toRightOf="@+id/past_orders_item_image"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:id="@+id/line_two"
        android:layout_below="@+id/line_one"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="399/-"
        android:layout_toRightOf="@+id/past_orders_item_image"
        android:textColor="@color/textblack"
        android:textSize="17dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:id="@+id/line_three"
        android:layout_below="@+id/line_two"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in stock"
        android:layout_toRightOf="@+id/line_three"
        android:textColor="#4CAF50"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"
        android:id="@+id/line_three_two"
        android:layout_below="@+id/line_two"
        android:layout_marginLeft="10dp"/>



    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_background_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/textblack"
            android:fontFamily="@font/lato"
            android:text="Repeat Order"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textblack"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>