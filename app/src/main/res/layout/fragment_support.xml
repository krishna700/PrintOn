<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SupportFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:id="@+id/support_title_card"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textSize="20dp"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent"/>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:id="@+id/contact_support_layout"
                android:layout_below="@+id/support_title_card"
                android:padding="12dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/call_us_icon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Us"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon to Fri"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:00am to 5:00pm"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/call_us_icon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Us"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon to Fri"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:00am to 5:00pm"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:layout_gravity="center_horizontal"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:padding="3dp"
                android:layout_below="@+id/contact_support_layout"
                android:id="@+id/support_help_layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/current_orders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Orders"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow4"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow4"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/past_orders">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Past Orders"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow2"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow2"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/new_model">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Model Request"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow3"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow3"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company policies"
                android:fontFamily="@font/lato"
                android:textColor="@color/textblack"
                android:textSize="15dp"
                android:layout_below="@+id/support_help_layout"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:id="@+id/company_policies_tv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_below="@+id/company_policies_tv"
                android:id="@+id/company_policies_layout"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow9"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow9"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms &amp; Conditions"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow8"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow8"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow7"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow7"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return Policy"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/textblack"
                            android:textSize="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/right_arrow_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/arrow6"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/colorAccent"
                            android:layout_toLeftOf="@+id/arrow6"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>