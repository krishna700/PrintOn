<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GiftsSubCategoriesActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:id="@+id/logo_gifts_sub_cat"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/cart"
        android:scaleType="fitXY"
        android:id="@+id/cart"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textblack"
        android:fontFamily="@font/lato"
        android:text="Pillows"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_gifts_sub_cat"
        android:id="@+id/gifts_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gifts_text"
        android:id="@+id/gifts_sub_cat_recycler"
        android:layout_above="@id/gifts_shift_cat_recycler"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/gifts_shift_cat_recycler"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>