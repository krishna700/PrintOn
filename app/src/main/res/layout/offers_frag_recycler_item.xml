<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <ImageView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:src="@drawable/mugs"
                android:scaleType="fitXY"
                android:id="@+id/offers_recycler_item_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/offers_recycler_item_image"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mugs - Buy One Get One Free"
                    android:textSize="10dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/textblack"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use Code: BOGO"
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid till : 1/12/2019"
                    android:textSize="10dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/textblack"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="7dp"
                    />

            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>